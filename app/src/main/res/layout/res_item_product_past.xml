<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="8dp">


    <ImageView
        android:id="@+id/ColorImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tint="#EE0A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/filled_circle" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ProductPastActivitiesRecyclerViewItemOptionsBtn"
        app:layout_constraintStart_toEndOf="@+id/ColorImageView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TitleTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:gravity="bottom|start"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="Title" />

        <TextView
            android:id="@+id/TypeTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start|top"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="change - 12:45"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/InfoTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="none"
            android:gravity="start|top"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="change info "
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/ProductPastActivitiesRecyclerViewItemOptionsBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:tint="#919191"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sharp_more_vert_24" />
</androidx.constraintlayout.widget.ConstraintLayout>