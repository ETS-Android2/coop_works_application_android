<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Administration.Schedule.AddShiftFrag">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/AddShiftDepartmentInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:hint="afdeling"
        app:boxBackgroundColor="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/Primary"
        app:boxStrokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <AutoCompleteTextView
            android:id="@+id/DepartmentDropDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/sharp_group_24"
            android:drawablePadding="5dp"
            android:editable="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/AddShiftDayInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:hint="dag"
        app:boxBackgroundColor="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/Primary"
        app:boxStrokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddShiftDepartmentInputLayout"
        app:layout_constraintWidth_percent="0.8">

        <AutoCompleteTextView
            android:id="@+id/DayDropDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/sharp_event_24"
            android:drawablePadding="5dp"
            android:editable="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/AddShiftTimeFromInputLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="tid"
        app:boxBackgroundColor="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/Primary"
        app:layout_constraintEnd_toEndOf="@+id/AddShiftDayInputLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AddShiftDayInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/AddShiftDayInputLayout"
        app:layout_constraintWidth_percent="0.4">

        <com.example.coopapp20.zOtherFiles.CustomEditText
            android:id="@+id/TimeFromTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/sharp_access_time_24"
            android:drawableEnd="@drawable/sharp_cancel_24"
            android:drawablePadding="5dp"
            android:inputType="time"
            android:maxLength="13"
            android:maxLines="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/AddShiftTimeToInputLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="tid"
        app:boxBackgroundColor="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/Primary"
        app:layout_constraintEnd_toEndOf="@+id/AddShiftDayInputLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/AddShiftDayInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/AddShiftDayInputLayout"
        app:layout_constraintWidth_percent="0.4">

        <com.example.coopapp20.zOtherFiles.CustomEditText
            android:id="@+id/TimeToTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/sharp_access_time_24"
            android:drawableEnd="@drawable/sharp_cancel_24"
            android:drawablePadding="5dp"
            android:inputType="time"
            android:maxLength="13"
            android:maxLines="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/ExecuteBtn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@color/Primary"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Button"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddShiftTimeFromInputLayout"
        app:layout_constraintWidth_percent="0.8" />

    <Switch
        android:id="@+id/StaySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="bliv pÃ¥ siden"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExecuteBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>