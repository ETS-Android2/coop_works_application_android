<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#B4B4B4"
        android:gravity="center"
        android:padding="10dp"
        android:text="Udsmidning"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView38"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDCDC"
            android:gravity="center"
            android:text="grund for udsmidning"
            android:textColor="#2B2B2B"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/view12"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#B4B4B4" />

        <Spinner
            android:id="@+id/ProductDisposalReasonSpinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8"
            tools:layout_editor_absoluteY="418dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="0"
        android:background="#B4B4B4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView39"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDCDC"
            android:gravity="center"
            android:text="antal"
            android:textColor="#2B2B2B"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/view13"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#B4B4B4" />

        <EditText
            android:id="@+id/ProductDisposalAmountEditText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
            android:textColor="#2B2B2B" />

    </LinearLayout>

    <ImageView
        android:id="@+id/view14"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="0"
        android:background="#B4B4B4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView41"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDCDC"
            android:gravity="center"
            android:text="Medtag pant"
            android:textColor="#2B2B2B"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#B4B4B4" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:checked="true"
            android:drawableTint="#00FFFFFF"
            android:textColorHighlight="#00FFFFFF"
            android:textOff="Medtages ikke"
            android:textOn="Medtages" />

    </LinearLayout>

    <Button
        android:id="@+id/ProductDisposalExecuteBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:background="@color/Primary"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="BekrÃ¦ft udsmidning"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />

</LinearLayout>